<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alllayout"
    android:background="#F2F4F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/opviewContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_op_bottom"
                android:layout_below="@+id/rl_op_top">

                <RelativeLayout
                    android:id="@+id/opview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#fff">

                    <View
                        android:id="@+id/bg_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                    <com.seaon.lib.movie.GifMovieView
                        android:id="@+id/gifview"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <com.biaoqing.library.diy.gifmaker.frame.GifFrameView
                        android:id="@+id/gifFrameview"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

            </FrameLayout>


            <com.seaon.lib.view.ContainerView
                android:id="@+id/layout_stickLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <com.seaon.lib.view.TuyaView
                android:id="@+id/tuya"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/rl_op_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccf1f1f1"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="59px"
                    android:layout_height="59px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/selector_crop_fanhui" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="59px"
                    android:layout_height="59px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/selector_crop_close"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="162px"
                    android:layout_height="62px"
                    android:layout_toLeftOf="@+id/iv_next"
                    android:src="@drawable/selector_crop_share" />

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="128px"
                    android:layout_height="59px"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="20px"
                    android:src="@drawable/selector_crop_next" />

                <ImageView
                    android:id="@+id/iv_confirm"
                    android:layout_width="59px"
                    android:layout_height="59px"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="20px"
                    android:src="@drawable/selector_crop_confirm"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_op_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#ccf1f1f1"
                android:paddingTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/btn_shape_white"
                    android:gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/iv_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="3dp"
                        android:text="背景"
                        android:textSize="20px" />

                    <com.seaon.lib.view.ColorImageView
                        android:id="@+id/v_color"
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_margin="6px"
                        android:background="@mipmap/touming" />

                    <RadioGroup
                        android:id="@+id/rg_auto_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_margin="6px"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.seaon.lib.view.ColorPickView
                            android:id="@+id/rb_translate"
                            android:layout_width="47px"
                            android:layout_height="47px"
                            android:background="@mipmap/touming"
                            android:button="@null"
                            android:checked="true" />

                        <com.seaon.lib.view.ColorPickView
                            android:id="@+id/rb_white"
                            android:layout_width="47px"
                            android:layout_height="47px"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/baise_white"
                            android:button="@null" />

                        <com.seaon.lib.view.ColorPickView
                            android:id="@+id/rb_hui"
                            android:layout_width="47px"
                            android:layout_height="47px"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/huise"
                            android:button="@null"
                            android:visibility="gone" />

                        <com.seaon.lib.view.ColorPickView
                            android:id="@+id/rb_black"
                            android:layout_width="47px"
                            android:layout_height="47px"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/base_heise"
                            android:button="@null" />

                        <com.seaon.lib.view.ColorPickView
                            android:id="@+id/rb_vid_pic"
                            android:layout_width="47px"
                            android:layout_height="47px"
                            android:layout_marginLeft="5dp"
                            android:button="@null"
                            android:visibility="gone" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="259px"
                    android:layout_height="59px"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/shape_conn_gray"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_undo"
                        android:layout_width="91px"
                        android:layout_height="59px"
                        android:paddingLeft="30px"
                        android:paddingRight="24px"
                        android:src="@mipmap/crop_chexiao2" />

                    <ImageView
                        android:id="@+id/iv_redo"
                        android:layout_width="91px"
                        android:layout_height="59px"
                        android:paddingLeft="24px"
                        android:paddingRight="30px"
                        android:src="@mipmap/crop_chongzuo2" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="77px"
                        android:layout_height="59px"
                        android:paddingLeft="22px"
                        android:paddingRight="30px"
                        android:src="@drawable/selector_crop_clear" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/del_container"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:visibility="invisible"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/del_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8px"
                        android:src="@mipmap/zuoyoulashen" />

                    <TextView
                        android:id="@+id/del_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拖动到此处删除"
                        android:textColor="#999ba8"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <com.seaon.lib.view.DiyCoverView
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>
