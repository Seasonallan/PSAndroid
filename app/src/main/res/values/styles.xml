<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="customCameraPreviewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="filter_bottom_btn" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:scaleType">fitXY</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="diy_comments_img" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EmojiconGridView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:columnWidth">40dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>


    <style name="horizontal_line">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#FFF2F4F6</item>
    </style>

    <style name="overScrollmode">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>



    <style name="button_bookdigests" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingRight">8dip</item>

        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <item type="id" name="statusbarutil_fake_status_bar_view" />
    <item type="id" name="statusbarutil_translucent_view" />

    <declare-styleable name="PullActivateLayout">
        <attr name="actionViewId" format="reference" />
        <attr name="toolViewId" format="reference" />
    </declare-styleable>

    <style name="remark_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
