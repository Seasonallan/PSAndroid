<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.season.myapplication">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.season.example.BaseApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.season.example.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.season.example.PsActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.season.example.CropActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.season.example.FunctionActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.season.example.BookActivity" android:screenOrientation="portrait"/>
        <meta-data
            android:name="xposedmodule"
            android:value="true" />

        <!-- 模块描述，显示在xposed模块列表那里第二行 -->
        <meta-data
            android:name="xposeddescription"
            android:value="测试Xposed模块" />

        <!-- 最低xposed版本号(lib文件名可知) -->
        <meta-data
            android:name="xposedminversion"
            android:value="30" />
        <provider
            android:name="com.season.bookreader.provider.DataProvider"
            android:authorities="com.season.bookreader.provider.DataProvider" />
    </application>

</manifest>