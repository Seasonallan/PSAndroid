<resources>

    <!-- Base application theme. -->
    <style name="BookTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/global_blue_dark</item>
        <item name="colorPrimaryDark">@color/global_blue_dark</item>
        <item name="colorAccent">@color/global_blue_dark</item>
        <item name="android:textAllCaps">false</item>
        <!-- <item name="android:windowBackground">@drawable/img_splash</item> -->
    </style>

    <style name="button_bookdigests" parent="android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="remark_Dialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/dialog_bg</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    </style>


    <declare-styleable name="PullActivateLayout">
        <attr name="actionViewId" format="reference" />
        <attr name="toolViewId" format="reference" />
    </declare-styleable>
</resources>