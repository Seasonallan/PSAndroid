<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:paddingTop="16dp"
	android:paddingBottom="16dp"
	android:orientation="horizontal"  >
	<TextView
		android:id="@+id/menu_settings_desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="16dp"
		android:minWidth="100dp"
		android:paddingRight="16dp"
		android:text="字号"
		android:textColor="@color/normal"
		android:textSize="15dp" />
	<TextView
		android:id="@+id/menu_settings_size"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="16dp"
		android:minWidth="48dp"
		android:textColor="@color/normal"
		android:textSize="13dp" />
	<TextView
		android:id="@+id/menu_settings_sut_but"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:layout_weight="1"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="16dp"
		android:background="@drawable/book_bg_selecter"
		android:textColor="@drawable/book_color_selecter"
		android:text="小"
		android:gravity="center"
		android:textSize="15dp"  />
	<TextView
		android:id="@+id/menu_settings_add_but"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:layout_weight="1"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="16dp"
		android:background="@drawable/book_bg_selecter"
		android:textColor="@drawable/book_color_selecter"
		android:text="大"
		android:gravity="center"
		android:textSize="15dp"  />
</LinearLayout>