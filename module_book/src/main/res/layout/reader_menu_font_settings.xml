<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="8dp" >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:text="阅读行间距"
			android:textColor="@color/common_white_2"
			android:textSize="15dp" />

		<RadioGroup
			android:id="@+id/menu_settings_line_spacing_rg"
			android:layout_width="wrap_content"
			android:layout_height="36dp"
			android:layout_margin="8dp"
			android:background="@drawable/menu_icon_but_background"
			android:gravity="center"
			android:orientation="horizontal"
			android:padding="1dp" >
			<RadioButton
				android:id="@+id/menu_settings_line_spacing_but_1"
				android:layout_width="108dp"
				android:layout_height="match_parent"
				android:background="@drawable/menu_radio_bg_selector"
				android:button="@null"
				android:gravity="center"
				android:padding="5dp"
				android:text="紧凑"
				android:textColor="@drawable/menu_radio_color_selector" />
			<RadioButton
				android:id="@+id/menu_settings_line_spacing_but_2"
				android:layout_width="108dp"
				android:layout_height="match_parent"
				android:background="@drawable/menu_radio_bg_selector"
				android:button="@null"
				android:gravity="center"
				android:padding="5dp"
				android:text="标准"
				android:textColor="@drawable/menu_radio_color_selector" />
			<RadioButton
				android:id="@+id/menu_settings_line_spacing_but_3"
				android:layout_width="108dp"
				android:layout_height="match_parent"
				android:background="@drawable/menu_radio_bg_selector"
				android:button="@null"
				android:gravity="center"
				android:padding="5dp"
				android:text="宽松"
				android:textColor="@drawable/menu_radio_color_selector" />
		</RadioGroup>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal"
		android:padding="8dp" >
		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:paddingLeft="8dp"
			android:text="字体大小"
			android:textColor="@color/common_white_2"
			android:textSize="15dp" />
		<ImageButton
			android:id="@+id/menu_settings_font_size_sut_but"
			android:layout_width="60dp"
			android:layout_height="32dp"
			android:layout_marginRight="15dp"
			android:background="@drawable/btn_regist_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="@drawable/font_size_redu_bg" />
		<ImageButton
			android:id="@+id/menu_settings_font_size_add_but"
			android:layout_width="60dp"
			android:layout_height="32dp"
			android:background="@drawable/btn_regist_bg"
			android:padding="8dp"
			android:scaleType="fitCenter"
			android:src="@drawable/font_size_add_bg" />
	</LinearLayout>
</LinearLayout>