<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_tuceng"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tc_copy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_img_copy" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:textSize="12dp"
            android:text="复制"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tc_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tc_up_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_img_up" />
        <TextView
            android:id="@+id/tc_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:textSize="12dp"
            android:text="上移"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tc_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tc_down_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_img_down" />
        <TextView
            android:id="@+id/tc_down_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_color"
            android:textSize="12dp"
            android:text="下移"/>
    </LinearLayout>

</LinearLayout>
