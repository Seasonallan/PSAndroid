<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_vip"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tc_copy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vip_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:text="画布时长：9S"/>
        <TextView
            android:id="@+id/vip_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="图层时长：5s"/>
        <TextView
            android:id="@+id/vip_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="开始时间：0s"/>
        <TextView
            android:id="@+id/vip_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="结束时间：5s"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tc_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <SeekBar
            android:id="@+id/vip_sb_start"
            android:layout_width="match_parent"
            android:layout_height="29dp"/>
        <SeekBar
            android:id="@+id/vip_sb_end"
            android:layout_width="match_parent"
            android:layout_height="29dp"/>
        <SeekBar
            android:id="@+id/vip_sb_count"
            android:layout_width="match_parent"
            android:layout_height="29dp"/>
    </LinearLayout>
</LinearLayout>
